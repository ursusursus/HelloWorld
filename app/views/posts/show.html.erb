<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<h2>Comments</h2>

<% if @post.comments.exists? %>

	<% for comment in @post.comments %>

   		<p><%= comment.author %></p>
		<p><%= comment.content %></p>
		<hr>

	<% end %>

<% else %>

	<p>Ešte žiadne komentáre</p>

<% end %>

<%= form_for ([@post, @post.comments.build]) do |f| %>

	<p>
		<%= f.label :author %> <br>
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.label :content %> <br>
		<%= f.text_field :content %>
	</p>

	<p>
		<%= f.submit "Post comment" %>
	</p>

<% end %>
